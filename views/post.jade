extends layout

block content
  div.post
    br
    br
    a(href="/") 
      span.glyphicon.glyphicon-chevron-left
      |   back to portfolio
    h1
      a(href=post.url)
        = post.title
    span.date #{post.date.getFullYear()}
    div
      != post.row
    br
    br
    br
    div.post.content
      != post.content
    div.tags
      - each tag in post.tags
        a(href=tagUrl(tag))
          span.label.label-ric #{tag}